{
  "name": "Robot Command Console (Edge + Cloud)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "hostRequirements": {
    "cpus": 2
  },
  "waitFor": "onCreateCommand",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "pip install -r /workspace/requirements.txt -q && PYTHONPATH=/workspace/src:/workspace/Edge FLASK_DEBUG=1 FLASK_APP=WebUI.app flask run --host=0.0.0.0 --port=8080 & PYTHONPATH=/workspace/src:/workspace/Edge python /workspace/.devcontainer/run_cloud.py &",
  "portsAttributes": {
    "8080": {
      "label": "Edge WebUI",
      "protocol": "http",
      "onAutoForward": "openPreview"
    },
    "8888": {
      "label": "Cloud API",
      "protocol": "http",
      "onAutoForward": "notify"
    },
    "8025": {
      "label": "Mailhog",
      "onAutoForward": "ignore"
    },
    "15672": {
      "label": "RabbitMQ Management",
      "onAutoForward": "ignore"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "Edge/WebUI/app/__init__.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.extraPaths": [
          "/workspace/src",
          "/workspace/Edge"
        ],
        "python.terminal.activateEnvironment": true,
        "terminal.integrated.env.linux": {
          "PYTHONPATH": "/workspace/src:/workspace/Edge"
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "samuelcolvin.jinjahtml",
        "monosans.djlint",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [
    8080,
    8888,
    8025,
    15672
  ],
  "features": {
    "ghcr.io/devcontainers/features/docker-from-docker:1": {}
  }
}
