{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://robot-command-console/schemas/command_response.schema.json",
  "title": "CommandResponse",
  "type": "object",
  "required": ["trace_id", "timestamp", "command"],
  "properties": {
    "trace_id": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "command": {
      "type": "object",
      "required": ["id", "status"],
      "properties": {
        "id": { "type": "string" },
        "status": { "type": "string", "enum": ["accepted", "running", "succeeded", "failed", "cancelled"] }
      },
      "additionalProperties": false
    },
    "result": {
      "type": "object",
      "properties": {
        "data": { "type": ["object", "array", "string", "number", "boolean", "null"] },
        "summary": { "type": "string" }
      },
      "additionalProperties": true
    },
    "error": {
      "type": "object",
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" },
        "details": { "type": ["object", "array", "string", "number", "boolean", "null"] }
      },
      "required": [],
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
